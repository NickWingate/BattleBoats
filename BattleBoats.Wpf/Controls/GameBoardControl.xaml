<Grid x:Name="MainGrid"
        x:Class="BattleBoats.Wpf.Controls.GameBoardControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:controls="clr-namespace:BattleBoats.Wpf.Controls"
        xmlns:local="clr-namespace:BattleBoats.Wpf.Controls"
        mc:Ignorable="d" 
        d:DesignHeight="720" d:DesignWidth="720"
        Background="{StaticResource MaterialDesignDarkBackground}">
    <Grid x:Name="BoardGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ContentPresenter/>
        <controls:BoatControl BoatHeight="{Binding Boats[4].RowSpan, UpdateSourceTrigger=PropertyChanged}" 
                              BoatWidth="{Binding Boats[4].ColumnSpan, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.Column="{Binding Boats[4].Column, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.Row="{Binding Boats[4].Row, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.ColumnSpan="{Binding Boats[4].ColumnSpan, UpdateSourceTrigger=PropertyChanged}"
                              Grid.RowSpan="{Binding Boats[4].RowSpan, UpdateSourceTrigger=PropertyChanged}"
                              IsSelected="{Binding Boats[4].IsSelected}"
                              Panel.ZIndex="1"/>
        <controls:BoatControl BoatHeight="{Binding Boats[3].RowSpan, UpdateSourceTrigger=PropertyChanged}" 
                              BoatWidth="{Binding Boats[3].ColumnSpan, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.Column="{Binding Boats[3].Column, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.Row="{Binding Boats[3].Row, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.ColumnSpan="{Binding Boats[3].ColumnSpan, UpdateSourceTrigger=PropertyChanged}"
                              Grid.RowSpan="{Binding Boats[3].RowSpan, UpdateSourceTrigger=PropertyChanged}"
                              IsSelected="{Binding Boats[3].IsSelected}"
                              Panel.ZIndex="1"/>
        <controls:BoatControl BoatHeight="{Binding Boats[2].RowSpan, UpdateSourceTrigger=PropertyChanged}" 
                              BoatWidth="{Binding Boats[2].ColumnSpan, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.Column="{Binding Boats[2].Column, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.Row="{Binding Boats[2].Row, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.ColumnSpan="{Binding Boats[2].ColumnSpan, UpdateSourceTrigger=PropertyChanged}"
                              Grid.RowSpan="{Binding Boats[2].RowSpan, UpdateSourceTrigger=PropertyChanged}"
                              IsSelected="{Binding Boats[2].IsSelected}"
                              Panel.ZIndex="1"/>
        <controls:BoatControl BoatHeight="{Binding Boats[1].RowSpan, UpdateSourceTrigger=PropertyChanged}" 
                              BoatWidth="{Binding Boats[1].ColumnSpan, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.Column="{Binding Boats[1].Column, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.Row="{Binding Boats[1].Row, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.ColumnSpan="{Binding Boats[1].ColumnSpan, UpdateSourceTrigger=PropertyChanged}"
                              Grid.RowSpan="{Binding Boats[1].RowSpan, UpdateSourceTrigger=PropertyChanged}"
                              IsSelected="{Binding Boats[1].IsSelected}"
                              Panel.ZIndex="1"/>
        <controls:BoatControl BoatHeight="{Binding Boats[0].RowSpan, UpdateSourceTrigger=PropertyChanged}" 
                              BoatWidth="{Binding Boats[0].ColumnSpan, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.Column="{Binding Boats[0].Column, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.Row="{Binding Boats[0].Row, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.ColumnSpan="{Binding Boats[0].ColumnSpan, UpdateSourceTrigger=PropertyChanged}"
                              Grid.RowSpan="{Binding Boats[0].RowSpan, UpdateSourceTrigger=PropertyChanged}"
                              IsSelected="{Binding Boats[0].IsSelected}"
                              Panel.ZIndex="1"/>
    </Grid>

    <Rectangle Fill="{StaticResource MaterialDesignLightSeparatorBackground}" RadiusX="10" RadiusY="10" Margin="-20"/>

</Grid>
